<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card login-card">
        <div class="card-header text-white bg-secondary">
          Login
        </div>
        <div class="card-body text-white bg-dark">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field form-group row">
              <%= f.label :email, class: "col-md-4 col-form-label text-md-right"%><br />
              <div class="col-md-6">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>

            <div class="field form-group row">
              <%= f.label :password, class: "col-md-4 col-form-label text-md-right"%><br />
              <div class="col-md-6">
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group row">
                <div class="col-md-6 offset-md-4">
                    <div class="form-check">
                      <div class="field">
                        <%= f.check_box :remember_me, class: "form-check-input" %>
                        <%= f.label :remember_me, class: "form-check-label" %>
                      </div>
                    </div>
                </div>
              </div>
            <% end %>

            <div class="form-group row mb-0">
              <div class="col-md-8 offset-md-4">
                <div class="actions">
                  <%= f.submit "Log in", class: "btn btn-primary mb-3" %>
                </div>
              </div>
              <div class="col-md-8 offset-md-2">
                <%= render "devise/shared/links", class: "btn btn-link" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
